@using BookStore.ViewModels;
@model RoleViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="description" content="Betgy Restuarant Buy your favorite foods.">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- title -->
    <title>Bergy - Book Your Table</title>
    <!-- css files -->
    <link rel="stylesheet" href="~/css/style.css">
    <style>
        form{
            background-color: #f1f1f1;
        }
        .container .logo {
            color: black;
        }

        .group {
            width: 100%;
            padding: 18px 20px;
        }

        .login-register {
            width: 900px;
            padding: 10px;
            background-color: rgba(0, 0, 0, 0.02);
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            align-content: space-between;
        }

            .login-register .login, .register {
                padding: 20px 40px;
                background-color: white;
                text-align: center;
                cursor: pointer;
            }

                .login-register .login:hover, .register:hover {
                    background-color: #fe8d00;
                }

                    .login-register .login:hover h2, .register:hover h2 {
                        color: white;
                    }

                .login-register .login h2, .register h2 {
                    color: #888;
                }

        @@media (max-width: 767px) {
            .login-register {
                width: 750px;
            }
        }

        @@media (max-width: 600px) {
            .login-register {
                width: 500px;
            }
        }

        @@media (max-width: 500px) {
            .login-register {
                width: 300px;
                grid-template-columns: repeat(1, 1fr);
            }
        }

        .danger {
            color: var(--main-color);
        }
        .header + .container{
            margin: auto;
        }
        .contact .container{
            padding: 10px 4%;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 30px;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="container d-flex justify-content-between">

            <div><a href="/"><h1 class="logo"><SPan>Ber</SPan>gy.</h1></a></div>

            <div class="d-flex align-items-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                </svg>
                @User.Identity.Name
            </div>
        </div>
    </div>
    <div class="contact">
    <div class="container">
        <div class="login-register">
            <div class="login">
                <a asp-controller="Role" asp-action="AddRole"><h2>Add Role</h2></a>
            </div>
            <div class="register">
                <a asp-controller="Role" asp-action="AddUserRole"><h2>Add User Role</h2></a>
            </div>
        </div>
    </div>
    

    
    <div class="container">
        <div class="contact-form">
            <form asp-controller="Role" asp-action="AddRole" method="post" autocomplete="off">

                <input asp-for="RoleName" placeholder="Role Name" class="input">
                <span asp-validation-for="RoleName" class="danger"></span>
                
                <input type="submit" value="Add">
            </form>
        </div>
    </div>
    </div>
</body>
</html>